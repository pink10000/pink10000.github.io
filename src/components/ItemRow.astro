---
import VertBar from "./VertBar.astro";
const { title, meta, link } = Astro.props;
---

<li class="contents">
  <span class="font-bold text-right whitespace-normal break-words text-light-base04 dark:text-dark-base0D">
    {link ? (
      <a href={link} target="_blank" rel="noopener noreferrer" class="text-light-base0B dark:text-dark-base0B underline">
        {title}
      </a>
    ) : (
      title
    )}
    {meta ? (
      <>
        <br />
        <span class="text-xs font-normal">{meta}</span>
      </>
    ) : null}
  </span>
  <VertBar />
  <span>
    <slot />
  </span>
</li>
