        <Exp />

        <!-- Wins -->
        <h2 class="text-2xl lg:text-2xl font-bold mb-2">events i won</h2> 
        <Events />

        <!-- Stack -->
        <h2 class="text-2xl lg:text-2xl font-bold mb-2">tech stack(s)</h2>
